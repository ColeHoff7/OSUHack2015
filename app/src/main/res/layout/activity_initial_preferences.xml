<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/prefLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cole.osuhack2015.InitialPreferences">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select Anything That Interests You!"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food"
        android:id="@+id/textView3"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burgers"
        android:id="@+id/burger"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafes"
        android:id="@+id/cafe"
        android:layout_below="@+id/burger"
        android:layout_alignStart="@+id/burger"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinese"
        android:id="@+id/chinese"
        android:layout_below="@+id/cafe"
        android:layout_alignStart="@+id/cafe"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delis"
        android:id="@+id/deli"
        android:layout_below="@+id/chinese"
        android:layout_alignStart="@+id/chinese"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexican"
        android:id="@+id/mexican"
        android:checked="false"
        android:layout_below="@+id/deli"
        android:layout_alignStart="@+id/deli" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entertainment"
        android:id="@+id/textView4"
        android:layout_below="@+id/mexican"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arcades"
        android:id="@+id/arcade"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/mexican"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art"
        android:id="@+id/art"
        android:checked="false"
        android:layout_below="@+id/arcade"
        android:layout_alignStart="@+id/arcade" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casinos"
        android:id="@+id/casinos"
        android:checked="false"
        android:layout_below="@+id/art"
        android:layout_alignStart="@+id/art" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Festivals"
        android:id="@+id/festivals"
        android:layout_below="@+id/casinos"
        android:layout_alignStart="@+id/casinos"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Museums"
        android:id="@+id/museums"
        android:layout_below="@+id/festivals"
        android:layout_alignStart="@+id/festivals"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_below="@+id/museums"
        android:layout_centerHorizontal="true"
        android:onClick="submitData"/>



</RelativeLayout>
</ScrollView>